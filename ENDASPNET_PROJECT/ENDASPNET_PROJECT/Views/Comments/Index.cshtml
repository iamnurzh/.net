
@{
    ViewData["Title"] = "Index";
}

@model ENDASPNET_PROJECT.Models.Comments.Comment


<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
<fieldset>
    <legend>Enter creation time</legend>
    <div class="editor-label">
        @Html.LabelFor(model => model.commentTime)
        <div class="col-md-10">
            @Html.EditorFor(model => model.commentTime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.commentTime)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

</fieldset>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}